{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "flocktauri",
  "version": "1.2.1",
  "identifier": "com.flocktauri.flock",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "https://flockmod.com/draw/",
    "beforeBuildCommand": ""
  },
  
  "app": {
    "windows": [],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' ws: wss: https:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": ["$APPDATA/**"]
    }
  }
}